<!DOCTYPE html>
<html lang="en">
<%- include("../partials/head.ejs") %>

    <body>
        <%- include("../partials/header.ejs") %>
            <main>
                <h1>Editar producto</h1>
                <form action="/productos/editar/<%= product.id %>?m=PUT" method="post" enctype="multipart/form-data">
                    <fieldset>
                        <label>Nombre del producto</label>
                        <input class="input" type="text" name="nombre" placeholder="Nombre del producto"
                            value="<%= product.nombre %>">
                    </fieldset>
                    <fieldset>
                        <label>Descripción</label>
                        <textarea name="descripcion" placeholder="Descripción"><%= product.descripcion %></textarea>
                    </fieldset>
                    <fieldset>
                        <label>Imagen</label>
                        <input class="imput-imagen" type="file" name="imagen" placeholder="Imagen" multiple>
                    </fieldset>
                    <fieldset>
                        <label>Categoría</label>
                        <select class="select" name="categoria" placeholder="Categoría">
                            <% let categorias=["Remeras", "Buzos" , "Camperas" , "Vestidos" , "Pantalones" , "Jeans" ]%>
                                <% for( let index=0; index < categorias.length; index++ ) { %>
                                    <% if (categorias[index] == product.categoria) { %>
                                        <option value="<%= categorias[index] %>" selected><%= categorias[index] %></option>
                                    <% } else { %>
                                        <option value="<%= categorias[index] %>"><%= categorias[index] %></option>
                                    <% } %>
                                <% } %>
                        </select>
                    </fieldset>
                    <fieldset>
                        <label>Colores</label>
                            <% let colores = product.colors.map(element => { %>
                                <% return element.color %>
                            <% }) %>
                            <input class="input" type="text" name="color" placeholder="Separar por comas y no dejar espacios" value="<%= colores %>">
                    </fieldset>
                    <fieldset>
                        <label>Talle</label>
                            <% let talles = product.sizes.map(element => { %>
                                <% return element.size %>
                            <% }) %>
                            <input class="input" type="text" name="talle" placeholder="Separar por comas y no dejar espacios" value="<%= talles %>">
                    </fieldset>
                    <fieldset>
                        <label>Stock</label>
                        <input class="input" type="number" name="stock" placeholder="Stock"
                            value="<%= product.stock %>">
                    </fieldset>
                    <fieldset>
                        <label>Precio</label>
                        <input class="input" type="number" name="precio" placeholder="Precio"
                            value="<%= product.precio %>">
                    </fieldset>
                    <fieldset>
                        <label>Descuento</label>
                        <input class="input" type="number" name="descuento" placeholder="Descuento"
                            value="<%= product.descuento %>">
                    </fieldset>
                    <button class="button-editar">
                        Editar
                    </button>
                    <button type="reset" class="button-editar">
                        Borrar
                    </button>
                </form>
                <%- include("../partials/logo-wts.ejs") %>
            </main>
            <%- include("../partials/footer.ejs") %>
    </body>

</html>